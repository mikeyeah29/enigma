{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                { "name": "Soft Sage", "slug": "primary", "color": "#8FAF9A" },
				{ "name": "Deep Teal", "slug": "secondary", "color": "#2F5D62" },
                { "name": "Muted Clay", "slug": "accent", "color": "#C48A6A" },
                { "name": "Soft Lavender", "slug": "accent-2", "color": "#B6A6C9" },
                { "name": "Stone Grey", "slug": "neutral", "color": "#E2E0DA" },
                { "name": "Warm Off White", "slug": "white", "color": "#F6F4EF" },
                { "name": "Charcoal", "slug": "text", "color": "#2E2E2E" }
            ],
            "defaultPalette": false,
            "defaultGradients": false,
            "custom": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Polymath",
                    "name": "Polymath",
                    "slug": "polymath"
                }
            ],
            "fluid": true,
            "defaultFontSizes": false,
            "fontSizes": [
                {
                    "slug": "md",
                    "name": "Medium",
                    "size": "clamp(1rem, 0.9rem + 0.5vw, 1.25rem)"
                },
                {
                    "slug": "lg",
                    "name": "Large",
                    "size": "clamp(1.25rem, 1rem + 1vw, 1.5rem)"
                },
                {
                    "slug": "xl",
                    "name": "Extra Large",
                    "size": "clamp(1.5rem, 1rem + 2vw, 2rem)"
                },
                {
                    "slug": "xxl",
                    "name": "Extra Extra Large",
                    "size": "clamp(2rem, 1.2rem + 2.5vw, 3rem)"
                },
                {
                    "slug": "hero",
                    "name": "Hero",
                    "size": "clamp(2.5rem, 1.5rem + 3vw, 4rem)"
                }
            ],
            "dropCap": false
        },
        "spacing": {
            "padding": true,
            "units": [
                "px",
                "em",
                "rem",
                "%"
            ],
            "spacingScale": {
                "steps": 6,
                "mediumStep": 1.5,
                "unit": "rem"
            },
            "sizes": {
                "padding": [
                    {
                        "slug": "none",
                        "name": "None",
                        "size": "0px"
                    },
                    {
                        "slug": "xs",
                        "name": "Extra Small",
                        "size": "24px"
                    },
                    {
                        "slug": "sm",
                        "name": "Small",
                        "size": "36px"
                    },
                    {
                        "slug": "md",
                        "name": "Medium",
                        "size": "48px"
                    },
                    {
                        "slug": "lg",
                        "name": "Large",
                        "size": "96px"
                    },
                    {
                        "slug": "xl",
                        "name": "Extra Large",
                        "size": "126px"
                    }
                ]
            }
        },
        "layout": {
            "contentSize": "960px",
            "wideSize": "1180px"
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--polymath)",
            "fontSize": "16px",
            "lineHeight": 1.6
        },
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--primary)"
        },
        "spacing": {
            "blockGap": "1.5rem"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--accent)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "700",
                    "lineHeight": 1.2
                }
            }
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "padding": {
                        "left": "2rem",
                        "right": "2rem"
                    }
                }
            }
        }
    },
    "customTemplates": [],
    "templateParts": []
}