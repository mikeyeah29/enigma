<?xml version="1.0"?>
<ruleset name="RWD Theme Coding Standards">
    <description>
        PHPCS ruleset for the RWD theme.
        Applies WordPress Coding Standards and security checks.
    </description>

    <!-- Use full WordPress standard -->
    <rule ref="WordPress"/>

    <!-- Add extra strict security checks -->
    <rule ref="WordPress.Security.EscapeOutput"/>
    <rule ref="WordPress.Security.NonceVerification"/>
    <rule ref="WordPress.DB.PreparedSQL"/>

    <!-- Scan these files/folders -->
    <file>functions.php</file>
    <file>classes</file>
    <file>blocks</file>
    <file>template-parts</file>

    <!-- Ignore these -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>build/*</exclude-pattern>

    <!-- Arguments -->
    <arg name="tab-width" value="4"/>
    <arg value="p"/> <!-- show progress -->
</ruleset>
